{
  "name": "reminder-bot",
  "version": "1.1.2",
  "description": "A clone of the 'Hello Jarvis' Facebook Messenger bot, built with Microsoft Bot Framework and Wit.ai.",
  "main": "lib/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebsylvester/reminder-bot.git"
  },
  "scripts": {
    "start": "node ./lib/app.js",
    "build:watch": "babel src --out-dir lib --source-maps --watch",
    "build": "babel src --out-dir lib --source-maps",
    "test": "nyc --reporter=lcov mocha",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "postinstall": "npm run build"
  },
  "keywords": [
    "Microsoft Bot Framework",
    "botbuilder",
    "botbuilder-wit",
    "chatbot",
    "bot",
    "wit.ai",
    "Hello Jarvis"
  ],
  "author": "Sebastian Sylvester",
  "license": "MIT",
  "bugs": "https://github.com/sebsylvester/reminder-bot/issues",
  "homepage": "https://github.com/sebsylvester/reminder-bot",
  "dependencies": {
    "@google/maps": "^0.3.1",
    "botbuilder": "^3.6.0",
    "botbuilder-wit": "^2.0.2",
    "chance": "^1.0.4",
    "moment-timezone": "^0.5.11",
    "mongoose": "^4.8.4",
    "node-wit": "^4.2.0",
    "restify": "^4.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7"
  }
}
